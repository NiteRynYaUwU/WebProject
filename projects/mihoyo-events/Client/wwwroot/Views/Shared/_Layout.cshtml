<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - miHoYo Events</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-kit-code.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.15);
        }
        .btn-primary {
            background: #3c8ce6;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: #1a6ec0;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-mihoyo-deep-blue via-[#2a4365] to-mihoyo-deep-blue">
    <nav class="glass-card fixed w-full top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a href="/" class="flex items-center space-x-2">
                <img src="/images/logo.png" class="h-8 w-8" alt="miHoYo">
                <span class="text-mihoyo-white text-xl font-bold">miHoYo Events</span>
            </a>
            <!-- Navigation items remain similar with new color scheme -->
        </div>
    </nav>

    <main role="main" class="pb-20 pt-24">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>