<div class="container mx-auto px-4">
    <form asp-action="Index" method="get" class="mb-8 glass-card p-6 rounded-xl">
        <div class="flex flex-col md:flex-row gap-4">
            <input type="text" name="searchString" 
                   value="@ViewData["CurrentFilter"]" 
                   placeholder="Search events..." 
                   class="flex-grow p-3 rounded-lg bg-white/5 text-white">
            
            <select name="eventStatus" class="p-3 rounded-lg bg-white/5 text-white">
                <option value="">All Events</option>
                <option value="Past">Past Events</option>
                <option value="Current">Current Events</option>
                <option value="Future">Future Events</option>
            </select>
            
            <button type="submit" class="btn-primary px-6 py-3 rounded-lg">
                <i class="fas fa-search mr-2"></i>Search
            </button>
        </div>
    </form>
</div>
