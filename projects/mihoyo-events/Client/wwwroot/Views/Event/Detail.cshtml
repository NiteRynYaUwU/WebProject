@model Event

@{
    ViewData["Title"] = Model.Title;
}

<section class="container mx-auto px-4 py-8">
    <div class="glass-card rounded-xl p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="space-y-4">
                <img src="@Model.ImageUrl" class="w-full h-96 object-cover rounded-lg" alt="@Model.Title">
                <div class="flex flex-wrap gap-4">
                    <span class="px-4 py-2 rounded-full @(Model.Status == "Current" ? "bg-green-500/20 text-green-400" : "bg-gray-500/20 text-gray-400")">
                        @Model.Status Event
                    </span>
                    <div class="flex items-center text-gray-400">
                        <i class="fas fa-calendar mr-2"></i>@Model.EventDate.ToString("MMM dd, yyyy")
                    </div>
                    <div class="flex items-center text-gray-400">
                        <i class="fas fa-map-marker mr-2"></i>@Model.Location
                    </div>
                </div>
            </div>
            <div class="space-y-6">
                <h1 class="text-4xl font-bold text-mihoyo-white">@Model.Title</h1>
                <p class="text-gray-300 text-lg">@Model.Description</p>
                
                <div class="glass-card p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-mihoyo-white mb-4">Event Rewards</h3>
                    <div class="prose text-gray-300">
                        @Html.Raw(Model.Rewards.Replace("\n",