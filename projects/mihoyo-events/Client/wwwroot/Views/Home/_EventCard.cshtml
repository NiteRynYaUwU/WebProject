@model Event

<div class="glass-card event-card rounded-xl p-6 h-full flex flex-col">
    <div class="flex justify-between items-center mb-4">
        <span class="px-3 py-1 rounded-full @GetStatusColor(Model.Status)">
            @Model.Status
        </span>
        <span class="text-gray-400 text-sm">@Model.EventDate.ToString("MMM dd")</span>
    </div>
    <img src="@Model.ImageUrl" class="w-full h-48 object-cover rounded-lg mb-4" alt="@Model.Title">
    <h3 class="text-xl font-semibold text-mihoyo-white mb-2">@Model.Title</h3>
    <p class="text-gray-300 mb-4 flex-grow">@Model.Description</p>
    <div class="flex justify-between items-center">
        <div class="text-mihoyo-accent">
            <i class="fas fa-gift mr-2"></i>Rewards Available
        </div>
        <a asp-action="Detail" asp-route-id="@Model.EventId" 
           class="btn-primary px-4 py-2 rounded-lg">
            Details <i class="fas fa-arrow-right ml-2"></i>
        </a>
    </div>
</div>

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Current" => "bg-green-500/20 text-green-400",
            "Future" => "bg-blue-500/20 text-blue-400",
            _ => "bg-gray-500/20 text-gray-400"
        };
    }
}